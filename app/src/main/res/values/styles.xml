<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lightPurple</item>
        <item name="colorPrimaryDark">@color/mainPurple</item>
        <item name="colorAccent">@color/lightestPurple</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/textGrey</item>
        <item name="android:textColorSecondary">@color/textGrey</item>
        <item name="actionMenuTextColor">@color/textGrey</item>
    </style>


    <style name="plusColorStyle">
        <item name="android:textColor">#0000FF</item>
    </style>
    <style name="minusColorStyle">
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="noDiffColorStyle">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="infoHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="infoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:textSize">@dimen/info_text_size</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="infoImageClip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:gravity">start</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="infoImageFull">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:gravity">start|center</item>
        <item name="android:background">@color/textGrey</item>
        <item name="android:padding">1dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

</resources>
